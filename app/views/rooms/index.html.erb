
<legend class="alert alert-info" id="search_button">
  <strong>   CLICK ME TO TRY SEARCH !  </strong>
</legend>

<div class="search" id="searchform">
  <%= render 'formsearch' %>
</div>


<fieldset>

  <legend class="alert alert-heading">ROOM LIST</legend>

</fieldset>
<br/>
<table class="table table-bordered table-striped table-condensed" >
  <thread>
  <tr>
    <th> # </th>
    <th>NAME</th>
    <th>CNAME</th>
    <th>CAPACITY</th>
    <th>COMMENTS</th>
    <th>LOCATION</th>
    <th>DETAILS</th>
  </tr>
  </thread>
  <tbody>
<% @rooms.each do |room| %>
  <tr align="center">
    <td align="center"><%= room.roomnum %></td>
    <td align="center"><%= room.name %></td>
    <td align="center"><%= room.cname %></td>
    <td align="center"><%= room.capacity %></td>
    <%
       devices_str = ""
       devices = room.devices
       if (devices & 1) == 1
        devices_str = devices_str + " Projector "
       end
       devices = devices >> 1
       if (devices & 1) == 1
         devices_str = devices_str + " Telephone "
       end
       devices = devices >> 1
       if (devices & 1) == 1
         devices_str = devices_str + " Television "
       end
    %>
    <td align="center"><%= devices_str %></td>
    <td align="center"><%= room.location %></td>
    <td align="center"><%= link_to 'Details', room %></td>


  </tr>
<% end %>
  </tbody>
</table>

<br />
