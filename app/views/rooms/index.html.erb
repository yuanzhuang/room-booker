<%= render 'formhead' %>

<p class="form-actions" id="search_button">
  <strong>   CLICK ME TO TRY SEARCH !  </strong>
</p>

<div class="search" id="searchform">
  <%= render 'formsearch' %>
</div>


<%= javascript_tag  %>

<h1>Listing rooms</h1>

<table class="table table-bordered table-striped table-condensed" >
  <thread>
  <tr>
    <th>Roomnum</th>
    <th>Name</th>
    <th>Cname</th>
    <th>Capacity</th>
    <th>Location</th>
    <th>Details</th>
  </tr>
  </thread>
  <tbody>
<% @rooms.each do |room| %>
  <tr>
    <td align="center"><%= room.roomnum %></td>
    <td align="center"><%= room.name %></td>
    <td align="center"><%= room.cname %></td>
    <td align="center"><%= room.capacity %></td>
    <td align="center"><%= room.location %></td>
    <td align="center"><%= link_to 'Details', room %></td>


  </tr>
<% end %>
  </tbody>
</table>

<br />
