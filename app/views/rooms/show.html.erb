<p id="notice"><%= notice %></p>



<div class="form-actions">
<p>
  <b>Roomnum:</b>
  <%= @room.roomnum %>
</p>

<p>
  <b>Name:</b>
  <%= @room.name %>
</p>

<p>
  <b>CName:</b>
  <%= @room.cname %>
</p>

<p>
  <b>Capacity:</b>
  <%= @room.capacity %>
</p>

<p>
  <b>Comments:</b>
  <%
     devices_str = ""
     devices = @room.devices
     if (devices & 1) == 1
       devices_str = devices_str + " Projector "
     end
     devices = devices >> 1
     if (devices & 1) == 1
       devices_str = devices_str + " Telephone "
     end
     devices = devices >> 1
     if (devices & 1) == 1
       devices_str = devices_str + " Television "
     end
  %>
  <%= devices_str %>
</p>

<p>
  <b>Location:</b>
  <%= @room.location %>
</p>

</div>
</p>

<%=  render 'bookingtable' %>

<hr/>
