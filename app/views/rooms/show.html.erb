<p id="notice"><%= notice %></p>



<div class="form-actions">
<p>
  <b>Roomnum:</b>
  <%= @room.roomnum %>
</p>

<p>
  <b>Name:</b>
  <%= @room.name %>
</p>

<p>
  <b>CName:</b>
  <%= @room.cname %>
</p>

<p>
  <b>Capacity:</b>
  <%= @room.capacity %>
</p>

<p>
  <b>Comments:</b>
  <%
     devices_str = ""
     devices = @room.devices
     if (devices & 1) == 1
       devices_str = devices_str + " Projector "
     end
     devices = devices >> 1
     if (devices & 1) == 1
       devices_str = devices_str + " Telephone "
     end
     devices = devices >> 1
     if (devices & 1) == 1
       devices_str = devices_str + " Television "
     end
  %>
  <%= devices_str %>
</p>

<p>
  <b>Location:</b>
  <%= @room.location %>
</p>

</div>
</p>

<p>
  <b> All Booking(s) :</b>
</p>

<table class="table table-bordered table-striped table-condensed" >
  <tr>
    <th>operation</th>
    <th>Organizer</th>
    <th>Description</th>
    <th>invitees</th>
    <th>start-date</th>
    <th>end-date</th>
    <th>Weekday</th>
    <th>start-time</th>
    <th>end-time</th>
    <th>recurring</th>
    <th>expired</th>

    <th>operation</th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <% @user = User.find_by_id(booking.user_id) %>
    <td align="center"><%= button_to "Edit booking", {:action=>"edit", :id=> booking.id, :controller => "bookings" },:method=>:get, :class=>"btn btn-info btn-mini"%></td>
    <td  align="center"><%= @user.username %></td>
    <td align="center"><%= booking.description %></td>
    <td align="center"><%= booking.invitees %></td>
    <td align="center"><%= booking.startdate %></td>
    <td align="center"><%= booking.enddate %></td>
    <td align="center"><%= booking.startdate.to_datetime.strftime "%A" %></td>
    <td align="center"><%= booking.starttime.strftime "%H:%M" %></td>
    <td align="center"><%= booking.endtime.strftime "%H:%M" %></td>
    <td align="center"><%= booking.recurring + "#{booking.recurringbits}" %></td>
    <td align="center"><%= (booking.enddate <= Date.current) %></td>


    <td align="center"><%= button_to("Delete", {:action=>"destroy", :controller => "bookings", :id=>booking.id, :roomid=>@room.id}, :method=>:delete, :confirm=>"Are you sure?",:class=>"btn btn-danger btn-mini" ) %></td>
  </tr>
<% end %>

</table>

<hr/>
<%= link_to 'Book', new_booking_path(:roomid => @room.id) %>  |

