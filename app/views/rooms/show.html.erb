<p id="notice"><%= notice %></p>

<p>
  <%= "Cookies = "+ cookies[:user_name].inspect %>
  <hr/>
</p>

<p>
  <b>Roomnum:</b>
  <%= @room.roomnum %>
</p>

<p>
  <b>Name:</b>
  <%= @room.name %>
</p>

<p>
  <b>Cname:</b>
  <%= @room.cname %>
</p>

<p>
  <b>Capacity:</b>
  <%= @room.capacity %>
</p>

<p>
  <b>Location:</b>
  <%= @room.location %>
</p>

<p>
  <hr/>
</p>

<p>
  <b> All Booking(s) :</b>
</p>

<table border="3">
  <tr>
    <th>Organizer</th>
    <th>Description</th>
    <th>invitees</th>
    <th>start-date</th>
    <th>end-date</th>
    <th>start-time</th>
    <th>end-time</th>
    <th>recurring</th>
    <th>guid</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <% @user = User.find_by_id(booking.user_id) %>
    <td><%= @user.username %></td>
    <td><%= booking.description %></td>
    <td><%= booking.invitees %></td>
    <td><%= booking.startdate %></td>
    <td><%= booking.enddate %></td>
    <td><%= booking.starttime.strftime "%H:%M" %></td>
    <td><%= booking.endtime.strftime "%H:%M" %></td>
    <td><%= booking.recurring %></td>
    <td><%= booking.guid %></td>

    <td><%= link_to "Edit", :action=>"edit", :id=> booking.id, :controller => "bookings" ,:roomid => @room.id %></td>
    <td><%= button_to("Delete", {:action=>"destroy", :controller => "bookings", :id=>booking.id, :roomid=>@room.id}, :method=>:delete, :confirm=>"Are you sure?") %></td>
  </tr>
<% end %>

</table>

<hr/>
