<div class="searchpanel">
<%= form_tag :action => :result, :controller =>:search, :class=>".form-horizontal" do %>
    <fieldset>

      <legend class="alert alert-heading">Search Options</legend>

      <div class="control-group">

      <div class="alert alert-error" id="search_alert">
        <strong> zZ zZ </strong>
      </div>
      <div class="controls">
        <label class="control-label" for="start_date">Start Date</label>
        <%= text_field_tag :startdate, params[:startdate], :id => "search_select_start_date" %>
      </div>

      <div class="controls">
        <label class="control-label" for="end_date">End Date</label>
        <%= text_field_tag :enddate, params[:enddate], :id=> "search_select_end_date" %>
      </div>

      <label class="control-label" for="starttime">Start Time</label>
       <div class="controls">
      <%= time_select :booking, "starttime" ,{:minute_step => 30}, :id => "search_select_start_time" %>
      </div>

      <label class="control-label" for="endtime">End Time</label>
       <div class="controls">
      <%= time_select :booking, "endtime" ,{:minute_step => 30}, :id => "search_select_end_time" %>
      </div>
     </div>
      <div class="control-group">
      <label class="control-label"  for="capacity">Capacity</label>
       <div class="controls">
      <%= select_tag :capacity, options_for_select([['ALL',nil],['5','5'],['10','10'],['15','15']],'ALL'), %>
      </div>
      </div>

      <div class="control-group">
      <label class="control-label" for="device">Devices</label>
       <div class="controls">
      <%=  check_box_tag 'projector','projector', false,:class=>"checkbox_inline" %> Projector
      <%=  check_box_tag 'telephone','telephone', false,:class=>"checkbox_inline" %> telephone
      </div>
      </div>

      <div class="control-group">
      <label class="controls" for="recurring">Recurring Type</label>
      <div class="controls">
      <%= radio_button_tag 'recurring',  Booking::RECURRING_TYPE[0], false, :class=> 'search_recurring_type' %> NO_RECURRING
      <%= radio_button_tag 'recurring',   Booking::RECURRING_TYPE[1], true, :class=> 'search_recurring_type' %> DAILY
      <%= radio_button_tag 'recurring',   Booking::RECURRING_TYPE[2], false, :class=> 'search_recurring_type'  %> WEEKLY
      <%= radio_button_tag 'recurring',  Booking::RECURRING_TYPE[3], false,:class=> 'search_recurring_type'  %> BI-WEEKLY
      </div>
      </div>

      <div class="control-group">
      <label for="recurring" class="controls">Recurring Day</label>
       <div class="controls">
      <%= check_box_tag 'recurringday1', Booking::RECURRING_DAY[0],false, :class=>'recurring_day' %> Mon.
      <%= check_box_tag 'recurringday2', Booking::RECURRING_DAY[1],false, :class=>'recurring_day' %> Tue.
      <%= check_box_tag 'recurringday3', Booking::RECURRING_DAY[2],false, :class=>'recurring_day' %> Wed.
      <%= check_box_tag 'recurringday4', Booking::RECURRING_DAY[3],false, :class=>'recurring_day' %> Thu.
      <%= check_box_tag 'recurringday5', Booking::RECURRING_DAY[4],false, :class=>'recurring_day' %> Fri.
      <%= check_box_tag 'recurringday6', Booking::RECURRING_DAY[5],false, :class=>'recurring_day' %> Sat.
      <%= check_box_tag 'recurringday7', Booking::RECURRING_DAY[6],false, :class=>'recurring_day' %> Sun.
      </div>
      </div>

      <div class="controls ">
      <%= submit_tag "Search Available Room(s)", :class=>"btn btn-primary " %>
      </div>
    </fieldset>
<% end %>


</div>

