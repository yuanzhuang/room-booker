<% require 'calendar_helper' %>

<%= form_tag({:action=> :update },:method=>:put)  do %>
    <p>
      <label for="username">User</label>
      <% @user = User.find_by_id(@booking.user_id)%>
      <%= text_field_tag :username, @user.username, :disabled=>true %>
    </p>

    <p>
      <label for="summary">Summary</label>
      <%= text_field_tag :summary, @booking.summary %>
    </p>

    <p>
      <label for="description">Description</label>
      <%= text_area_tag :description, @booking.description,:class=>"input-xlarge" %>
    </p>
    <p>
      <label for="invitees">Invitees</label>
      <%= text_field_tag :invitees, @booking.invitees,:class=>"input-xlarge" %>
    </p>


    <p>
      <label for="startdate">Start Date</label>
      <%= date_select "booking", "startdate", :order=>[:year,:month,:day]%>
    </p>
    <p>
      <label for="enddate">End Date</label>
      <%= date_select "booking", "enddate", :order=>[:year,:month,:day]%>
    </p>

    <p>
      <label for="starttime">Start Time</label>
      <%= time_select "booking", "starttime",{:minute_step => 30} %>
    </p>
    <p>
      <label for="endtime">End Time</label>
      <%= time_select "booking", "endtime",{:minute_step => 30} %>
    </p>

    <p>
      <label for="recurring">Recurring Type</label>    <br/>
      <%= radio_button_tag 'recurring',  Booking::RECURRING_TYPE[0], false, :class=> "recurring_type" %> NO_RECURRING
      <%= radio_button_tag 'recurring',   Booking::RECURRING_TYPE[1], false, :class=> "recurring_type" %> DAILY
      <%= radio_button_tag 'recurring',   Booking::RECURRING_TYPE[2], false, :class=> "recurring_type"  %> WEEKLY
      <%= radio_button_tag 'recurring',  Booking::RECURRING_TYPE[3], false,:class=> "recurring_type"  %> BI-WEEKLY  <br/>
    </p>
    <p>
      <label for="recurring">Recurring Day</label>    <br/>
      <%= check_box_tag 'recurringday1', Booking::RECURRING_DAY[0],false, :class=>'recurring_day' %> Mon.
      <%= check_box_tag 'recurringday2', Booking::RECURRING_DAY[1],false, :class=>'recurring_day' %> Tue.
      <%= check_box_tag 'recurringday3', Booking::RECURRING_DAY[2],false, :class=>'recurring_day' %> Wed.
      <%= check_box_tag 'recurringday4', Booking::RECURRING_DAY[3],false, :class=>'recurring_day' %> Thu.
      <%= check_box_tag 'recurringday5', Booking::RECURRING_DAY[4],false, :class=>'recurring_day' %> Fri.
      <%= check_box_tag 'recurringday6', Booking::RECURRING_DAY[5],false, :class=>'recurring_day' %> Sat.
      <%= check_box_tag 'recurringday7', Booking::RECURRING_DAY[6],false, :class=>'recurring_day' %> Sun. <br/>
    </p>


    <%= hidden_field_tag(:roomname, @room.name) %>
    <p>
      <%= submit_tag "Update",:class=>"btn btn-warning" %>
    </p>
<% end %>

